<div class="container" style="width: 700px;">
  <div class="card">
    <h5 class="card-header">Add Post</h5>
    <div class="card-body">

      <% if post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      <%= form_with(model: post) do |form| %>
        <div class="form-group">
          <label for="exampleInputTitle">Title</label>
          <%= form.text_field :title, class: "form-control", placeholder: "Enter Title"%>
        </div>
        <div class="form-group">
          <label for="exampleInputBosy">Body</label>
          <%= form.text_area :body, class: "form-control", placeholder: "Enter Blog Description" %>
        </div>
        <% unless action_name == "edit"%>
          <div class="form-group">
            <label for="exampleInputFile">File</label>
            <%= form.file_field :image, class: "form-control" %>
          </div>
        <%end%>
        <%= form.submit :Submit, class: "btn btn-success float-right"%>
      <% end %>
    </div>
  </div>
</div>